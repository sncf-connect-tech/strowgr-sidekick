<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
    </formats>

    <files>
        <file>
            <source>${project.build.directory}/${project.build.finalName}${target.ext}</source>
            <outputDirectory>${file.separator}</outputDirectory>
            <destName>${project.artifactId}${target.ext}</destName>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>README*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}${file.separator}conf</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>*.toml.sample</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
        </fileSet>

    </fileSets>
</assembly>